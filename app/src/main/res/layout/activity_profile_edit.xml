<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_foreground"
                android:rotation="180"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/edit_my_profile"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"/>

        </LinearLayout>

        <!--  Text edit group  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/fullName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/black"
                tool:text="Sok Sao"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_textedit_pf"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/txtEditEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColor="@color/black"
                tool:text="email@abc.com"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                android:background="@drawable/rounded_textedit_pf"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/txtEditGender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_textedit_pf"
                android:textColor="@color/black"
                tool:text="Male"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/birthday"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/txtEditBoD"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_textedit_pf"
                android:textColor="@color/black"
                tool:text="DD-MM-YYYY"
                android:paddingHorizontal="16dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"/>


            <EditText
                android:id="@+id/txtEditAddress"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_textedit_pf"
                android:gravity="top"
                android:padding="16dp"
                android:textColor="@color/black"
                tool:text="Address" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">
            <Button
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:background="#881414"
                android:textColor="@color/silver"
                />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">
        <Button
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:background="#17751B"
            android:textColor="@color/silver"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>